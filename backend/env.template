# ===========================================
# HAC & UMRE PLATFORM - ENVIRONMENT VARIABLES
# ===========================================
# Copy this file to .env and fill in the values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Service
EMERGENT_LLM_KEY=your-emergent-llm-key

# Kumru 2B (Turkce AI - Hugging Face Router API)
# Kumru 2B'yi kullanmak icin Hugging Face token gerekli
# https://huggingface.co/settings/tokens adresinden alinabilir
HF_TOKEN=your-huggingface-token

# JWT (optional - Supabase handles this)
JWT_SECRET_KEY=your-jwt-secret

# ===========================================
# SEC-002 FIX: CORS Configuration (REQUIRED!)
# ===========================================
# Comma-separated list of allowed origins
# DO NOT use * (wildcard) in production!
# 
# Development:
# CORS_ORIGINS=http://localhost:3000
# 
# Production:
# CORS_ORIGINS=https://hacveumreturlari.com,https://www.hacveumreturlari.com

# For Development (change to production URLs when deploying)
CORS_ORIGINS=http://localhost:3000
# For Production, use this instead:
# CORS_ORIGINS=https://hacveumreturlari.com,https://www.hacveumreturlari.com

# ===========================================
# Frontend Environment Variables (Vite)
# ===========================================
VITE_BACKEND_URL=http://localhost:8001
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# ===========================================
# SEC-004: ClamAV Antivirus (Optional)
# ===========================================
# Set to true to enable antivirus scanning
# Requires ClamAV daemon running
CLAMAV_ENABLED=false
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# ===========================================
# Sentry Error Monitoring (Backend)
# ===========================================
SENTRY_DSN=https://your-backend-dsn@o123.ingest.sentry.io/789
LOG_LEVEL=INFO
